@model IEnumerable<EmTekno.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">


            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">ÜRÜN LİSTESİ</h3>
                </div><!-- /.box-header -->
                <br />
                <a class="btn btn-primary btn-block" href="@Url.Action("Create")">Yeni Kayıt</a>
                <br />
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Adı</th>
                                <th>Onaylı</th>
                                <th>Anasayfa</th>
                                <th>Popüler</th>
                                <th>Kategori Adı</th>
                                <th></th>

                            </tr> 
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                            <tr>
                                <td><img src="~/Content/images/@x.ImageUrl" width="80" height="60" /></td>
                                <td>
                                    @x.Name
                                </td>
                                <td>
                                    @if (x.IsApproved)
                                    {
                                        <label class="label label-success"><i class="fa fa-fw fa-check-square-o"></i>Evet</label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger"><i class="fa fa-fw fa-times"></i>Hayır</label>
                                    }
                                </td>
                                <td>
                                    @if (x.IsHome)
                                    {
                                        <label class="label label-success"><i class="fa fa-fw fa-check-square-o"></i>Evet</label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger"><i class="fa fa-fw fa-times"></i>Hayır</label>
                                    }
                                </td>
                                <td>
                                    @if (x.IsFeatured)
                                    {
                                        <label class="label label-success"><i class="fa fa-fw fa-check-square-o"></i>Evet</label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger"><i class="fa fa-fw fa-times"></i>Hayır</label>
                                    }
                                </td>
                                <td>
                               @x.Category.Name
                                </td>

                                <td>
                                    <a class="btn btn-danger" href="@Url.Action("Delete",new {id=x.ID })"><i class="fa fa-fw fa-trash-o"></i>Sil</a>
                                    <a class="btn btn-primary" href="@Url.Action("Edit",new {id=x.ID })"><i class="fa fa-fw fa-edit"></i>Düzenle</a>
                                </td>

                            </tr>
                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Resim</th>
                                <th>Adı</th>
                                <th>Onaylı</th>
                                <th>Anasayfa</th>
                                <th>Popüler</th>
                                <th>Kategori Adı</th>
                                <th></th>

                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
 
