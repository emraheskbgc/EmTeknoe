@using EmTekno.Entity
@model IEnumerable<Product>


    <div id="myCarousel" class="carousel slide homCar">
        <div class="carousel-inner">
           @foreach (var item in Model)
           {
               <div class="item">
             <a href="/Home/ProductDetails/@item.ID">   <img style="width:100%; max-width:698px; max-height:327px; min-height:327px; min-width:698px; " src="~/Content/images/@item.ImageUrl" alt="bootstrap ecommerce templates"></a>
                     <div class="carousel-caption">
                      <h4>@item.Name</h4>
                     <p><span>@item.Price (₺)</span></p>
                      </div>
                </div>

           }
            
            <div class="item active" style="max-width:698px; max-height:327px; min-height:327px; min-width:698px;">
                <img style="width:100%; height:130px; position:absolute;  top: 20%;
     " src="~/Content/images/logo.png" alt="bootstrap templates">
                <div class="carousel-caption">
                    <h4>E&M Teknolojiye Hoşgeldiniz</h4>
                    <p><span>Teknolojinin Yeni Adresi</span></p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
    </div>
