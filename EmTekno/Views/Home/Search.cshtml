@using EmTekno.Entity
@model IEnumerable<Product>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">
                @Html.Action("_CategoryList", "Category")
                <li style="border:0"> &nbsp;</li>
                @Html.Action("Summary", "Cart")
            </ul>
        </div>


        @Html.Action("_FeaturedProductList", "Home")

    </div>
    <div class="span9">
        <!--
        New Products
        -->

        <h3>ÜRÜNLER </h3>

        <ul class="thumbnails">
            @foreach (var x in Model)
            {
                <li class="span3">
                    <div class="thumbnail">

                        <a href="/Home/ProductDetails/@x.ID"><img src="~/Content/images/@x.ImageUrl" style="max-width:207px; max-height:267px; min-height:267px; min-width:207px;" alt=""></a>
                        <div class="caption cntr">
                            <p>@x.Name</p>
                            <p><strong> @x.Price</strong></p>
                            <h4><a class="shopBtn" href="/Home/ProductDetails/@x.ID" title="add to cart">Görüntüle</a></h4>

                            <br class="clr">
                        </div>
                    </div>
                </li>

            }


        </ul>

    </div>
</div>


